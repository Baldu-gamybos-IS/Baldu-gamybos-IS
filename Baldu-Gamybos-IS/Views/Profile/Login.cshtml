@{
    var returnUrl = ViewData["ReturnUrl"] as string;
    var error = TempData["Error"] as string;
}

<h1>Prisijungimas</h1>
@if(!string.IsNullOrEmpty(error)){
    <h2 class="alert-danger" style="padding:20px;">@error</h2>
}
@* <form action="/login?ReturnUrl=@System.Net.WebUtility.UrlEncode(returnUrl)" method="post"> *@
<form action="/login" method="post">
    <div class="row pt-1">
        <div class="col-lg-2">
            <label>Vartotojo vardas</label>
        </div>
        <div class="col-lg-2">
            <input type="text" name="username" placeholder="Įveskite vartotojo vardą" required/>
        </div>
    </div>
    <div class="row pt-1">
        <div class="col-lg-2">
            <label>Slaptažodis</label>
        </div>
        <div class="col-lg-2">
            <input type="password" name="password" placeholder="Įveskite slaptažodį" required/>
        </div>
    </div>
    <div class="row pt-1">
        <div class="col-lg-2">
            <input type="submit" value="prisijungti"/>
        </div>
    </div>

</form>
