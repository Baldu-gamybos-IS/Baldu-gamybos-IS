@model Baldu_Gamybos_IS.Models.Distributor;
@{
	ViewData["Title"] = "NewDistributor";
}

<!DOCTYPE html>
<head>
	<link rel="stylesheet" href="~/css/warehouse.css" />
	<style>
		body {
			margin: 0;
			font-family: Arial, Helvetica, sans-serif;
		}

		.center {
			text-align: center;
		}

		#customers .wire {
			text-align: left;
			position: relative;
			right: 9px;
			border: 0px
		}
	</style>
</head>
<body>
	<center>
		<form asp-controller="Distributor" asp-action="CreateDistributor" method="POST" enctype="multipart/form-data">
			<div class="container box" style="width:95%; margin-bottom:2%; height:15%">
				<div colspan="3" class="wire boxall" style="left:0px; width:95%">
					<h4>
						<b class="bold">Suveskite išvežiotojo duomenis:</b>
					</h4>
				</div>
				<table id="distributor" style="width:95%;">
					<tr>
						<th style="width:35%">Pavadinimas</th>
						<th style="width:35%">Email</th>
						<th style="width:30%">Telefonas</th>
						
					</tr>
					<tr>
						<td>
							@Html.TextBoxFor(model => model.Name, new { style = "width:100%", required = "required", placeholder = "Pavadinimas" })
						</td>
						 <td>
							@Html.TextBoxFor(model => model.Email, new { style = "width:100%", placeholder = "Email" })
						</td>
						<td>
							@Html.TextBoxFor(model => model.Phone, new { style = "width:100%", placeholder = "Telefonas" })
						</td>
						
					</tr>
					@if(ViewData["SuccessState"]!=null){
						switch(ViewData["SuccessState"]){
							case 1:
								<div id="div-1">
								<label class="pull-center" style="color:red; font-size:30px;">Reikalingas bent vienas susisiekimo būdas<br/></label>
								</div>
								<script type="text/javascript">
									setTimeout(() => {
										const elem = document.getElementById("div-1");
										elem.parentNode.removeChild(elem);
									}, 3000);
								</script>
								break;
							case 2:
								<div id="div-1">
								<label class="pull-center" style="color:red; font-size:30px;">Pavadinime sutikti netikėti simboliai<br/></label>
								</div>
								<script type="text/javascript">
									setTimeout(() => {
										const elem = document.getElementById("div-1");
										elem.parentNode.removeChild(elem);
									}, 3000);
								</script>

								break;
							default:
								<div id="div-1">
								<label class="pull-center" style="color:red; font-size:30px;">Neapibūdinta klaida<br/></label>
								</div>
								<script type="text/javascript">
									setTimeout(() => {
										const elem = document.getElementById("div-1");
										elem.parentNode.removeChild(elem);
									}, 3000);
								</script>
								break;
						}
					}
					<tr>
						<th colspan=3></th>
						<th>
							<button type="submit" style='background-color:#00d4ff; color:black'>Pridėti</button>
						</th>
					</tr>
				</table>
				
			</div>
		</form>
	</center>
</body>
