@model Baldu_Gamybos_IS.Models.Distributor;
@{
	ViewData["Title"] = "NewDistributor";
}

<!DOCTYPE html>
<head>
	<link rel="stylesheet" href="~/css/warehouse.css" />
	<style>
		body {
			margin: 0;
			font-family: Arial, Helvetica, sans-serif;
		}

		.center {
			text-align: center;
		}

		#customers .wire {
			text-align: left;
			position: relative;
			right: 9px;
			border: 0px
		}
	</style>
</head>
<body>
	<center>
		<form asp-controller="Distributor" asp-action="CreateDistributor" method="POST" enctype="multipart/form-data">
			<div class="container box" style="width:95%; margin-bottom:2%; height:15%">
				<div colspan="6" class="wire boxall" style="left:0px; width:95%">
					<h4>
						<b class="bold">Suveskite išvežiotojo duomenis:</b>
					</h4>
				</div>
				<table id="distributor" style="width:95%;">
					<tr>
						<th style="width:20%">Pavadinimas</th>
						@* <th style="width:20%">Pašto kodas</th>
						<th style="width:10%">Kiekis</th>
						<th style="width:39%">Komentaras</th>
						<th style="width:11%">Failai</th> *@
					</tr>
					<tr>
						<td>
							@Html.TextBoxFor(model => model.Name, new { style = "width:100%", required = "required", placeholder = "Pavadinimas" })
						</td>
						@* <td>
							@Html.TextBoxFor(model => model.Order.DestZipcode, new { style = "width:100%", placeholder = "Pašto kodas" })
						</td>
						<td>
							@Html.TextBoxFor(model => model.Order.GetProduct().Count, new { style = "width:100%", type = "number", min = 1, max = 1000, required = "required", placeholder = "Kiekis" })
						</td>
						<td>
							@Html.TextAreaFor(model => model.Order.Comment, new { style = "min-width:100%; min-height:100%", wrap = "hard", placeholder = "Komentaras" })
						</td>
						<td>
							@Html.TextBoxFor(model => model.Files, new { style = "width:100%", type = "file", multiple = "multiple" })
						</td> *@
					</tr>
					<tr>
						<th colspan=4></th>
						<th>
							<button type="submit" style='background-color:#00d4ff; color:black'>Pridėti</button>
						</th>
					</tr>
				</table>
				
			</div>
		</form>
	</center>
</body>
